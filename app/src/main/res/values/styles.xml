<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Remove line below EditText -->
    <style name="NoUnderlineEditText" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:background">@color/color_transparent</item>
    </style>

    <!-- Rounded corners and gradient dialog -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

        <!-- buttons -->
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- Used for the background -->
        <item name="android:windowBackground">@drawable/custom_rounded_gradient_rectangle</item>
    </style>

</resources>
