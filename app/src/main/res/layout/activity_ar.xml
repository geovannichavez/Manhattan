<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AR">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wikitude.architect.ArchitectView
            android:id="@+id/architectView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Toolbar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/color_transparent"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="86" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Layer 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5" />

                        <ImageView
                            android:id="@+id/ivCoinsCounter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="35"
                            android:src="@drawable/ic_coins_counter" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60" />

                    </LinearLayout>

                    <Space
                        android:layout_weight="15"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <ImageView
                        android:id="@+id/ivPrize"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="43"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_gift" />
                    <Space
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_weight="23"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <Space
                            android:layout_weight="55"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/ivCoinsMetter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:src="@drawable/btn_coins_metter_20" />
                        <Space
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                    <Space
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                </LinearLayout>

                <!-- Layer 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="14" />

                        <TextView
                            android:id="@+id/tvCoinsCounter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="22"
                            android:fontFamily="@font/baloo_regular"
                            android:gravity="center"
                            android:lineSpacingExtra="-6sp"
                            android:textColor="@color/color_white"
                            android:textSize="14sp"
                            tools:text="5,500" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="64" />

                    </LinearLayout>

                    <Space
                        android:layout_weight="91"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>




</android.support.design.widget.CoordinatorLayout>